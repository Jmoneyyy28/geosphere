{
  "expo": {
    "name": "geosphere",
    "slug": "geosphere",
    "version": "1.0.0",
    "orientation": "portrait",
    "owner": "geosphere",
    "icon": "./assets/images/icon.png",
    "scheme": "geosphere",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.gif",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Allow $(PRODUCT_NAME) to access your photos",
        "NSPhotoLibraryAddUsageDescription": "Allow $(PRODUCT_NAME) to save photos",
        "NSCameraUsageDescription": "Allow $(PRODUCT_NAME) to use your camera",
        "NSMicrophoneUsageDescription": "Allow $(PRODUCT_NAME) to use your microphone"
      },
      "bundleIdentifier": "com.teamgeo.geosphere"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.teamgeo.geosphere"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "@viro-community/react-viro",
      "expo-asset"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "entryPoint": "./app/login.tsx",
    "extra": {
      "eas": {
        "projectId": "b449643d-e87a-490f-b847-f21bcf7450c6"
      }
    }
  }
}
